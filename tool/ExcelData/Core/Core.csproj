<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <RootNamespace>$(BaseNamespace).Tool.ExcelData.Core</RootNamespace>
        <AssemblyName>$(RootNamespace)</AssemblyName>
        <DocumentationFile>Properties\$(AssemblyName).xml</DocumentationFile>
        <Description>Datask ExcelData core library</Description>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Scripts\BaseTables.sql" />
      <None Remove="Scripts\TableColumnSchema.sql" />
      <None Remove="Scripts\TableReferenceSchema.sql" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Scripts\BaseTables.sql" />
      <EmbeddedResource Include="Scripts\TableColumnSchema.sql" />
      <EmbeddedResource Include="Scripts\TableReferenceSchema.sql" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CodeBits.LibraryEvents" Version="0.1.0" />
        <PackageReference Include="CodeBits.ResourceExtensions" Version="0.4.1" />
        <PackageReference Include="EPPlus" Version="4.5.3.3" />
        <PackageReference Include="System.Data.SqlClient" Version="4.8.3" />
    </ItemGroup>

</Project>
